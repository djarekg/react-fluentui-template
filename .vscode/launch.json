{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "launch api",
      "cwd": "${workspaceFolder}/apps/api",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "skipFiles": ["**/<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "launch app",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "pnpm run dev",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}/apps/demo",
      "cwd": "${workspaceFolder}/apps/demo"
    }
  ],
  "compounds": [
    {
      "name": "debug app",
      "configurations": ["launch api", "launch app"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
}
